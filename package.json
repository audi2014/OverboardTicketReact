{
  "private": true,
  "name": "overboard-ticket-react",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "build:dev": "tsc && vite build",
    "build:preview": "vite preview",
    "lint": "pnpm lint:eslint && pnpm lint:prettier && pnpm lint:package-json && pnpm lint:tsc",
    "lint:eslint": "eslint . --fix",
    "lint:package-json": "prettier-package-json --write",
    "lint:prettier": "prettier --write .",
    "lint:tsc": "tsc --noEmit",
    "lint:tsc:watch": "tsc --watch --noEmit",
    "pre-commit:install": "husky install",
    "start:dev": "vite"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.1",
    "i18next": "^22.4.6",
    "i18next-browser-languagedetector": "^7.0.1",
    "i18next-http-backend": "^2.1.1",
    "i18next-locize-backend": "^6.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^12.1.1",
    "react-redux": "^8.0.5",
    "redux": "^4.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "@vitejs/plugin-react-swc": "^3.0.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "prettier-package-json": "^2.8.0",
    "prettier-plugin-sort-json": "^1.0.0",
    "typescript": "^4.9.3",
    "vite": "^4.0.0",
    "vite-tsconfig-paths": "^4.0.3"
  },
  "lint-staged": {
    "*.(js|jsx|ts|tsx)": "eslint --fix",
    "*.(css|sass|scss|md)": "prettier --write",
    "package.json": "prettier-package-json --write"
  }
}
